<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bgmotoristi.com" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Motoristi BG</name>
    <description>
      The Application delivers connection between Bulgarian motor riders.
    </description>
    <author email="marinoff3417@gmail.com" href="*">
        Marin Marinov
    </author>
    <content src="index.html" />
    <platform name="android">
        <icon density="ldpi" src="www/res/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="www/res/android/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="www/res/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="www/res/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="www/res/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="www/res/android/drawable-xxxhdpi-icon.png" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <resource-file src="google-services.json" target="app/google-services.json" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1.3.4" />
</widget>
